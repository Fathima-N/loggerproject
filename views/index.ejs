<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <% include partials/_head.ejs %>
  </head>

  <body>
    <% include partials/_navbar.ejs %>

    <table class="table table-sm">
      <div class="container">
        <h3>Filter by...</h3>
        <div class="btn-toolbar">
          <div class="dropdown" id="severity" style="padding-right: 20px">
            <button class="btn btn-warning dropdown-toggle" id="severity" type="button" data-toggle="dropdown">Severity
            <span class="caret"></span></button>
            <ul class="dropdown-menu" id="severity">
              <li><a id="all" value="all">all</a></li>
              <li><a id="info">info</a></li>
              <li><a id="warning">warning</a></li>
              <li><a id="error">error</a></li>
            </ul>
          </div>
          <div class="dropdown" id="timestamp">
              <button class="btn btn-info dropdown-toggle" id="timestamp" type="button" data-toggle="dropdown">Timestamp
              <span class="caret"></span></button>
              <ul class="dropdown-menu" id="timestamp">
                <li><a id="newest">newest</a></li>
                <li><a id="oldest">oldest</a></li>
              </ul>
          </div>
        </div>
      </div>
    </table>

    <table class="table table-sm">
      <div class="container">
        <h3>Search by...</h3>
        
          <input class="form-control" id="server" type="server" placeholder="Server Name" aria-label="Search">

          <input class="form-control" id="message" type="server" placeholder="Message" aria-label="Search">

          <input class="form-control" id="tag" type="server" placeholder="Tag" aria-label="Search">
        
      </div>
    </table>

      <div class="main-container">
        <h2>Event Logs</h2>
        <table class="table table-sm">
          <thead>
            <tr>
              <th scope="col">Severity</th>
              <th scope="col">Timestamp</th>
              <th scope="col">Server Name</th>
              <th scope="col">Message</th>
              <th scope="col">Tag</th>
            </tr>
          </thead>
          <tbody>
            <!-- looping through the array of messages from server-->
            <% messages.forEach( message => { %>
              <tr class="table-light">
                <td><%=message.severity %></td>
                <td><%=message.created_at %></td>
                <td><%=message.server_name %></td>
                <td><%=message.message %></td>
                <td><%=message.tag %></td>            
              </tr>
            <% }) %>

          </tbody>
        </table>
      </div>

    <div class="row align-items-center justify-content-center">
      <nav aria-label="...">
        <ul class="pagination pagination-lg">
        </ul>
      </nav>
    </div>

  </body>

</html>
